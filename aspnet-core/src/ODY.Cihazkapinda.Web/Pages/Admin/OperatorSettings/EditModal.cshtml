@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.OperatorSettings.EditModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
}
<script>
    $('input[type="file"]').change(function (e) {
        var fileName = e.target.files[0].name;
        document.getElementById("file").nextElementSibling.innerHTML = fileName;
    });
</script>
<form asp-page="/Admin/OperatorSettings/EditModal" enctype="multipart/form-data">
    <abp-modal size="Default">
        <abp-modal-header title="@L["OperatorSetting"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="operatorSettingEditModal.Id" />
            <abp-input asp-for="operatorSettingEditModal.TenantId" />
            <input type="hidden" asp-for="operatorSettingEditModal.Image" />
            <abp-input asp-for="operatorSettingEditModal.OperatorName" />
            <div class="col-12">
                <label asp-for="@Model.file" style="margin-left:-13px;">@L["ChooseFile"]</label>
                <input required type="file" asp-for="@Model.file" class="custom-file-input">
                <label class="custom-file-label" style="margin-top: 25px;">@L["ChooseFile"]</label>
            </div>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>