@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.ProductManagement.ProductPropertySubTemplate.EditModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
}

<form asp-page="/Admin/ProductManagement/ProductPropertySubTemplate/EditModal">
    <abp-modal size="Default">
        <abp-modal-header title="@L["ProductPropertySubTemplate"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="productPropertySubTemplateEditModal.Id" />
            <abp-input asp-for="productPropertySubTemplateEditModal.TenantId" />
            <abp-select asp-for="productPropertySubTemplateEditModal.TITLE" asp-items="Model.productPropertyList" />
            <abp-input asp-for="productPropertySubTemplateEditModal.KEY" />
            <abp-input asp-for="productPropertySubTemplateEditModal.VALUE" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
