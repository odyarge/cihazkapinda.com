@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.ProductManagement.ProductPropertyTemplate.EditModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
    int index = 0;
}

<form asp-page="/Admin/ProductManagement/ProductPropertyTemplate/EditModal">
    <abp-modal size="Default">
        <abp-modal-header title="@L["ProductPropertyTemplate"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="productPropertyTemplateEditModal.Id" />
            <abp-input asp-for="productPropertyTemplateEditModal.TenantId" />
            <abp-input asp-for="productPropertyTemplateEditModal.Title" />
            <h5>Alt İçerikler</h5>
            <div class="form-group" style="margin:0 10px 0 10px;">
                @foreach (var item in Model.productPropertyTemplateEditModal.ProductPropertySubTemplates)
                {
                    index++;
                <div class="row border border-color-hover-light" style="margin-top:10px; padding-bottom:10px; padding-top:10px;">
                    <div class="col-4" style="padding-top:5px;">
                        <abp-input disabled="true" asp-for="@item.KEY" />
                    </div>
                    <div class="col-4" style="padding-top:5px;">
                        <abp-input disabled="true" asp-for="@item.VALUE" />
                    </div>
                    <div class="col-4" style="padding-top:5px;">
                        <abp-input disabled="true" asp-for="@item.TITLE" />
                    </div>
                </div>
                }
            </div>
            <br />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
