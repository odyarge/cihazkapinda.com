@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.ProductManagement.ProductPropertyTitles.EditModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
}

<form asp-page="/Admin/ProductManagement/ProductPropertyTitles/EditModal">
    <abp-modal size="Default">
        <abp-modal-header title="@L["ProductPropertyTitle"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="productPropertyTitleEditModal.Id" />
            <abp-input asp-for="productPropertyTitleEditModal.TenantId" />
            <abp-input asp-for="productPropertyTitleEditModal.Name" />
            <abp-input asp-for="productPropertyTitleEditModal.Active" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>