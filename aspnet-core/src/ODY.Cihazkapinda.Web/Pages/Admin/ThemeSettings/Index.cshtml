@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@using Volo.Abp.Users
@using ODY.Cihazkapinda.Permissions
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model ODY.Cihazkapinda.Web.Pages.Admin.ThemeSettings.IndexModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@inject ICurrentUser CurrentUser

@section scripts {
    <abp-script-bundle name="@typeof(ODY.Cihazkapinda.Web.Pages.Admin.ThemeSettings.IndexModel).FullName">
        <abp-script src="/Pages/Admin/ThemeSettings/index.js" />
    </abp-script-bundle>
}
<style>
    .centered {
        transform: translate3d(78px, -13px, 0px) !important;
    }
</style>
<abp-card id="ThemeSettingWrapper">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["ThemeSetting"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @if (await AuthorizationService.IsGrantedAsync(CihazkapindaPermissions.ThemeSettings.Create))
                {
                    <button type="button" class="btn btn-primary waves-effect waves-light" name="CreateTheme">@L["CreateTheme"]</button>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table style="border-collapse: collapse; border-spacing: 0; width: 100%;" striped-rows="true" class="table table-striped table-bordered dt-responsive nowrap"></abp-table>
    </abp-card-body>
</abp-card>
