@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.ThemeSettings.EditModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
}

<script>
    $('input[type="file"]').change(function (e) {
        var fileName = e.target.files[0].name;
        document.getElementById("file").nextElementSibling.innerHTML = fileName;
    });
</script>
<form asp-page="/Admin/ThemeSetting/EditModal">
    <abp-modal size="Default">
        <abp-modal-header title="@L["ThemeSettings"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="themeSettingEditModal.Id" />
            <abp-input asp-for="themeSettingEditModal.TenantId" />
            <abp-input asp-for="themeSettingEditModal.THEME_NAME" />
            <abp-input asp-for="themeSettingEditModal.THEME_PATH" />
            <div class="col-12" style="margin-bottom: 10px;">
                <label asp-for="@Model.file" style="margin-left:-13px;">@L["ChooseFile"]</label>
                <input type="file" asp-for="@Model.file" class="custom-file-input">
                <label class="custom-file-label" style="margin-top: 25px;">@L["ChooseFile"]</label>
            </div>
            <abp-input asp-for="newTheme" />
            <abp-input asp-for="themeSettingEditModal.THEME_ACTIVATED" />
            <abp-input asp-for="themeSettingEditModal.THEME_PRO" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>