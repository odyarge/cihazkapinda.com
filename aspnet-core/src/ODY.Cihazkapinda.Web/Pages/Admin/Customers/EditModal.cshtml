@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.Customers.EditModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
}
<form asp-page="/Admin/Customers/EditModal">
    <abp-modal size="Default">
        <abp-modal-header title="@L["Customers"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="customerEditModal.Id" />
            <abp-input asp-for="customerEditModal.TenantId" />
            <abp-input asp-for="customerEditModal.Name" />
            <abp-input asp-for="customerEditModal.Surname" />
            <abp-input asp-for="customerEditModal.NameAndSurname" />
            <abp-input asp-for="customerEditModal.Phone" />
            <abp-input asp-for="customerEditModal.Address" />
            <abp-input asp-for="customerEditModal.EMail" />
            <abp-input asp-for="customerEditModal.Active" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>