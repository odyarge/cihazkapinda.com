@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using ODY.Cihazkapinda.Localization
@model ODY.Cihazkapinda.Web.Pages.Admin.Customers.CreateModalModel
@inject IHtmlLocalizer<CihazkapindaResource> L
@{
    Layout = null;
}
<form asp-page="/Admin/Customers/CreateModal">
    <abp-modal size="Default">
        <abp-modal-header title="@L["Customers"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="customerCreateModal.TenantId" />
            <abp-input asp-for="customerCreateModal.Name" />
            <abp-input asp-for="customerCreateModal.Surname" />
            <abp-input asp-for="customerCreateModal.NameAndSurname" />
            <abp-input asp-for="customerCreateModal.Phone" />
            <abp-input asp-for="customerCreateModal.Address" />
            <abp-input asp-for="customerCreateModal.EMail" />
            <abp-input asp-for="customerCreateModal.Active" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>